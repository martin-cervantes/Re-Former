<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.text_field :username, class: 'form-control', placeholder: "Your username here" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class: 'form-control', placeholder: "example@example.com" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: 'form-control',  placeholder: "Your password here" %>
  </div>
  <%= f.submit "Save", class: 'btn btn-primary' %>
  <%= link_to 'Cancel', root_path, class: 'btn btn-danger' %>
<% end %>
